datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["tracing"]
}

model Post {
  id            Int  @id @default(autoincrement())
  userId        String
  bin           String
  photo         String
  title         String
  city          String
  lat           Decimal
  long          Decimal
  imagePublicID String

  // Index to optimize queries involving city and userId
  @@index([city, userId])
}
