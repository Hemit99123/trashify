datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
 
generator client {
  provider = "prisma-client-js"
  previewFeatures = ["tracing"]
}
 
model Post {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  userId   String
  bin      String
  photo    String
  title    String
  city     String
  coor     Json

  // Implemented db indexing to avoid linear search when querying for data (scalable solution)
  @@index([city, userId])
}
